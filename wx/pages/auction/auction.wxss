page {
  background-color: gainsboro;
}
page .auction {
  background-color: white;
  padding: 40rpx 20rpx 20rpx;
  margin-bottom: 20rpx;
}
page .auction .title {
  font-size: 40rpx;
  font-weight: bolder;
}
page .auction .tips {
  display: flex;
  justify-content: space-between;
  margin: 20rpx 0;
}
page .auction .tips .left {
  display: flex;
  background-color: green;
  border-radius: 20rpx;
  padding: 0 10rpx;
}
page .auction .tips .left text {
  color: white;
  font-size: 30rpx;
  align-self: center;
}
page .auction .tips .right {
  color: gray;
  font-size: 30rpx;
}
page .auction image {
  width: 100%;
  height: 400rpx;
}
page .auction .small {
  display: flex;
  width: 100%;
}
page .auction .small image {
  width: 100rpx;
  height: 100rpx;
  margin-right: 20rpx;
}
